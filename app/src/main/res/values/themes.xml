    <style name="Theme.PWRickApp" parent="Base.Theme.PWRickApp" />

    <style name="screen_background">
        <item name="android:background">@color/white_200</item>
    </style>

    <style name="toolbar_background">
        <item name="android:background">@color/white</item>
    </style>

    <style name="text_color">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="icon_tint">
        <item name="tint">@color/black</item>
    </style>

    <style name="card_background">
